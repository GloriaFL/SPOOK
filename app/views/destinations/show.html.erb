<h3>Reviews</h3>
<div>
  <% if @destinatio.reviews.blank? %>
    Be the first to leave a review for <%= @destination.name %>
  <% else %>
    <% @destination.reviews.each do |review| %>
      <p><%= review.content %></p>
    <% end %>
  <% end %>
</div>
<%= simple_form_for([@destinaiton, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.button :submit %>
<% end %>



<%= simple_form_for [@destination, @booking] do |f| %>
